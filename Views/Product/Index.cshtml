@model List<AMS23_BordaDourada.Models.ProductModel>

<div class="container">
  <a asp-controller="Category" asp-action="Create" role="button" class="btn btn-primary mt-2 mb-2">Adicionar Tarefa</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Descrição</th>
        <th scope="col">Está ativa?</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var product in Model)
      {
        <tr>
          <th scope="row">@product.Id</th>
          <td>@product.Description</td>
          <td></td>
          <td>
            <div class="btn-group" role="group" aria-label="Actions">
              <a role="button" class="btn btn-primary" asp-controller="Product" asp-action="Edit"
                asp-route-id="@product.Id">Editar</a>
              <a role="button" class="btn btn-danger" asp-controller="Product" asp-action="Delete"
                asp-route-id="@product.Id">Deletar</a>
            </div>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>
