@model CategoryModel;
@{
    ViewData["Title"] = "Edit";
}

<div class="text-start container">
    <div>
        <h1 class="display-4 text-center">Category List</h1>
    </div>

    <div class="mt-3">
        <form asp-controller="Category" asp-action="Edit" method="post">
            <div class="mb-3">
                <label for="InputName" class="form-label">Name</label>
                <input type="text" class="form-control" id="InputName" aria-describedby="NameHelp"
                    asp-for="Description">
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" asp-for="IsActive">
                <label class="form-check-label" for="defaultCheck1">
                    Categoria dever√° estar ativa?
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-danger" role="button" asp-controller="Category" asp-action="Index">Back</a>
        </form>
    </div>
</div>
